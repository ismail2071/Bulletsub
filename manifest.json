 {
 "manifest_version": 3,

  "name": "Danmu",
  "description": "Make you video player as chatroom!",
  "version": "1.0",
  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": ["tabs", "http://*/", "https://*/",  "contextMenus"],
  "content_scripts":[{
  "matches": [ "<all_urls>"],
  "css": ["css/jquery-ui.css","lib/bootstrap.min.css"],
  "js":["lib/jquery-2.1.3.min.js","js/firebase.js","js/jquery-ui.js", "js/jquery.danmu.js","content_script.js","lib/bootstrap.min.js"],
  "all_frames": true
  }],
  

  //using chrome API chrome.extension.getURL to separate dialog html view
   "web_accessible_resources": ["danMu.html","lib/jquery-2.1.3.min.js"],
   "icons": {  "16":"icon.png", 
                "48":"icon.png", 
                "128":"icon.png"  }
  
}